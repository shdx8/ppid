<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".User">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="70dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/form"
        android:elevation="4dp"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/button_rounded"
                android:gravity="center"
                android:text="Profil User"
                android:textColor="@color/white"
                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="50dp"
            android:layout_marginRight="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/t_nm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:text="Nama"
                android:textColor="@color/black"
                android:textSize="14dp" />

            <EditText
                android:id="@+id/nm"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/stroke"
                android:padding="7dp" />

            <TextView
                android:id="@+id/t_usn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="20dp"
                android:text="Username"
                android:textColor="@color/black"
                android:textSize="12dp" />

            <EditText
                android:id="@+id/usn"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/stroke"
                android:padding="7dp" />

            <TextView
                android:id="@+id/t_eml"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="5dp"
                android:text="E-mail"
                android:textColor="@color/black"
                android:textSize="12dp" />

            <EditText
                android:id="@+id/eml"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/stroke"
                android:padding="7dp" />

            <TextView
                android:id="@+id/t_almt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:text="Alamat"
                android:textColor="@color/black"
                android:textSize="12dp" />

            <EditText
                android:id="@+id/almt"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/stroke"
                android:padding="7dp" />

            <TextView
                android:id="@+id/t_ntel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="20dp"
                android:text="No.Telp"
                android:textColor="@color/black"
                android:textSize="12dp" />

            <EditText
                android:id="@+id/ntel"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/stroke"
                android:padding="7dp" />

            <TextView
                android:id="@+id/t_ftprf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="20dp"
                android:text="Foto Profil"
                android:textColor="@color/black"
                android:textSize="12dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">

                <EditText
                    android:id="@+id/fyprf"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/stroke"
                    android:padding="7dp" />

                <Button
                    android:id="@+id/button_foto"
                    android:layout_width="110dp"
                    android:layout_height="40dp"
                    android:layout_gravity=""
                    android:text="Pilih Foto"
                    android:textSize="12dp" />
            </LinearLayout>



            <TextView
                android:id="@+id/t_psw"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="20dp"
                android:text="Password"
                android:textColor="@color/black"
                android:textSize="12dp" />

            <EditText
                android:id="@+id/psw"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/stroke"
                android:padding="7dp" />

            <TextView
                android:id="@+id/t_upsw"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="20dp"
                android:text="Ulangi Password"
                android:textColor="@color/black"
                android:textSize="12dp" />

            <EditText
                android:id="@+id/upsw"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/stroke"
                android:padding="7dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

            <Button
                android:id="@+id/button_kmbl"
                android:layout_width="110dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:text="Kembali"
                android:textSize="12dp" />

            <Button
                android:id="@+id/button_smpn"
                android:layout_width="110dp"
                android:layout_height="40dp"
                android:layout_marginLeft="59dp"
                android:layout_alignParentRight="true"
                android:layout_gravity="center"
                android:text="simpan"
                android:textSize="12dp" />
        </LinearLayout>


        </LinearLayout>

    </RelativeLayout>

</FrameLayout>