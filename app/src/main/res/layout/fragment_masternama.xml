<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Notifikasi">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200sp"
        android:gravity="center"
        android:layout_marginTop="80sp"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:elevation="4sp"
        android:background="@drawable/form">

        <LinearLayout
            android:layout_width="300sp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="65sp"
            tools:layout_editor_absoluteY="135sp">

            <TextView
                android:id="@+id/l_nama"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:text="Nama SKPD"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/nama_skpd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"
                android:text="tanggal_waktu"
                android:textSize="16sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/l_alamat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:text="Alamat"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/alamat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"
                android:text=""
                android:textSize="16sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/l_telp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:text="No Telepon"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/telp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"
                android:text=""
                android:textSize="16sp"
                android:textStyle="bold" />



        </LinearLayout>

    </RelativeLayout>

</FrameLayout>